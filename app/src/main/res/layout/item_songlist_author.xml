<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/colorLightBlack"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/songlist_civ_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/user_head_bg"/>
    <TextView
        android:id="@+id/songlist_tv_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        android:text="author"/>
    <ImageButton
        android:id="@+id/songlist_ib_colc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/colorHyaline"
        android:src="@mipmap/dj_wsc"/>
    <ImageButton
        android:id="@+id/songlist_ib_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/colorHyaline"
        android:src="@mipmap/dj_share"/>
</LinearLayout>