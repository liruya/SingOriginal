<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/songlist_iv_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/ranking_new_back"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            android:id="@+id/songlist_inc_title"
            layout="@layout/view_title" />
        <ViewStub
            android:id="@+id/songlist_vs_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout="@layout/item_play" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@color/colorShallowWhite"
            android:padding="10dp"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/songlist_civ_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/user_head_bg"/>
            <TextView
                android:id="@+id/songlist_tv_author"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:text="author"/>
            <ImageButton
                android:id="@+id/songlist_ib_colc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/colorHyaline"
                android:src="@mipmap/dj_wsc"/>
            <ImageButton
                android:id="@+id/songlist_ib_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/colorHyaline"
                android:src="@mipmap/dj_share"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/songlist_tv_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray"
                    android:textSize="14sp"
                    android:text="text"/>
                <TextView
                    android:id="@+id/songlist_tv_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:background="@drawable/text_border"
                    android:textColor="@color/colorGray"
                    android:textSize="12sp"
                    android:text="tag" />
            </LinearLayout>
            <ImageButton
                android:id="@+id/songlist_tb_expan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:textOn=""
                android:textOff=""
                android:background="@color/colorHyaline"
                android:src="@mipmap/affas_suo"/>
        </LinearLayout>
        <include
            android:id="@+id/songlist_inc_play"
            layout="@layout/item_play" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/songlist_rv_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
