<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/songlist_iv_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/ranking_new_back"/>
    <include
        android:id="@+id/songlist_inc_title"
        layout="@layout/view_title" />
    <com.singoriginal.view.CustomScrollView
        android:id="@+id/songlist_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollIndicators="none"
        android:descendantFocusability="blocksDescendants"
        android:layout_below="@id/songlist_inc_title"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

            <Space
                android:id="@+id/songlist_space"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/songlist_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@color/colorLightBlack"
                android:padding="10dp"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/songlist_civ_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/user_head_bg"/>
                <TextView
                    android:id="@+id/songlist_tv_author"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:text="author"/>
                <ImageButton
                    android:id="@+id/songlist_ib_colc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:background="@color/colorHyaline"
                    android:src="@mipmap/dj_wsc"/>
                <ImageButton
                    android:id="@+id/songlist_ib_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:background="@color/colorHyaline"
                    android:src="@mipmap/dj_share"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorWhite"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/songlist_tv_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorGray"
                        android:textSize="14sp"
                        android:text="text"/>
                    <TextView
                        android:id="@+id/songlist_tv_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:background="@drawable/text_border"
                        android:textColor="@color/colorGray"
                        android:textSize="12sp"
                        android:text="tag" />
                </LinearLayout>
                <ImageButton
                    android:id="@+id/songlist_tb_expan"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:textOn=""
                    android:textOff=""
                    android:background="@color/colorHyaline"
                    android:src="@mipmap/affas_suo"/>
            </LinearLayout>
            <include
                android:id="@+id/songlist_inc_play"
                layout="@layout/item_play" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/songlist_rv_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:background="@color/colorWhite"/>
        </LinearLayout>
    </com.singoriginal.view.CustomScrollView>
    <ViewStub
        android:id="@+id/songlist_vs_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/songlist_inc_title"
        android:layout="@layout/item_play" />
</RelativeLayout>
