<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:id="@+id/nlgn_iv_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:src="@mipmap/no_login_pic"/>
    <Button
        android:id="@+id/nlgn_btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_below="@id/nlgn_iv_show"
        android:background="@color/colorDarkGreen"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:text="@string/login"/>
    <Button
        android:id="@+id/nlgn_btn_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_below="@id/nlgn_btn_login"
        android:background="@color/colorShallowBlue"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:text="@string/register"/>

</RelativeLayout>
