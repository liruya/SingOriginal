<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/song_item_rtl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <ImageView
            android:id="@+id/song_iv_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@mipmap/default_image_6_0"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignBottom="@id/song_iv_show"
            android:background="@mipmap/main_item_back_shadow"/>
        <TextView
            android:id="@+id/song_tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/song_iv_show"
            android:layout_alignRight="@id/song_iv_show"
            android:gravity="right|center_vertical"
            android:padding="3dp"
            android:drawableLeft="@mipmap/dj_listener"
            android:drawablePadding="5dp"
            android:background="@color/colorHyaline"
            android:textSize="12sp"
            android:textColor="@color/colorWhite"
            android:text="0"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/song_tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingBottom="5dp"
        android:textColor="@color/colorShallowBlack"
        android:textSize="14sp"
        android:text="name"/>
</LinearLayout>