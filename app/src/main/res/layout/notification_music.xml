<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorShallowBlack" >
    <ImageView
        android:id="@+id/ntf_iv_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        android:src="@mipmap/sing_icon_200"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ntf_iv_show"
        android:layout_alignRight="@id/ntf_iv_show"
        android:src="@mipmap/sing_icon_client"/>
    <ImageButton
        android:id="@+id/ntf_ib_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ntf_iv_show"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:background="@color/colorHyaline"
        android:src="@mipmap/abc_ic_clear_mtrl_alpha"/>
    <TextView
        android:id="@+id/ntf_tv_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ntf_iv_show"
        android:layout_toRightOf="@id/ntf_iv_show"
        android:layout_toLeftOf="@id/ntf_ib_close"
        android:layout_margin="5dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:text="song"/>
    <TextView
        android:id="@+id/ntf_tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ntf_tv_song"
        android:layout_toRightOf="@id/ntf_iv_show"
        android:layout_marginLeft="5dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/colorWhite"
        android:text="author"/>
    <TextView
        android:id="@+id/ntf_cv"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="@color/colorBlack"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/ntf_iv_show"
        android:layout_alignParentRight="true" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ntf_cv"
        android:layout_alignBottom="@id/ntf_iv_show"
        android:layout_toRightOf="@id/ntf_iv_show"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageButton
            android:id="@+id/ntf_ib_prev"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foregroundGravity="center"
            android:layout_alignTop="@id/ntf_cv"
            android:layout_alignBottom="@id/ntf_iv_show"
            android:background="@color/colorHyaline"
            android:src="@mipmap/note_btn_pre"/>
        <ImageButton
            android:id="@+id/ntf_ib_play"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foregroundGravity="center"
            android:layout_alignTop="@id/ntf_cv"
            android:layout_alignBottom="@id/ntf_iv_show"
            android:background="@color/colorHyaline"
            android:src="@mipmap/note_btn_play"/>
        <ImageButton
            android:id="@+id/ntf_ib_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foregroundGravity="center"
            android:layout_alignTop="@id/ntf_cv"
            android:layout_alignBottom="@id/ntf_iv_show"
            android:background="@color/colorHyaline"
            android:src="@mipmap/note_btn_next"/>
    </LinearLayout>

</RelativeLayout>