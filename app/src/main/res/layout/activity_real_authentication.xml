<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGray"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDarkGreen">

        <TextView
            android:id="@+id/authentication_tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/cancel"
            android:textColor="@color/colorWhite"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/realAuthentication"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/authentication_tv_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:text="@string/commit"
            android:textColor="@color/colorWhite"
            android:textSize="13sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorLightGray"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/colorWhite">

                <TextView
                    android:id="@+id/real_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/star"
                    android:textColor="@color/colorRed"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/real_star"
                    android:text="@string/certificatePhotos"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:drawablePadding="6dp"
                    android:drawableRight="@mipmap/more_iv"
                    android:text="@string/yetAdd"
                    android:textSize="12sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/star"
                    android:textColor="@color/colorRed"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/nameOrganization"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shape_song_comment_et"
                android:hint="@string/inputNameOrOrganization"
                android:paddingBottom="8dp"
                android:paddingLeft="6dp"
                android:paddingTop="8dp"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/star"
                    android:textColor="@color/colorRed"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="@string/identificationNum"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

            <RadioGroup
                android:id="@+id/authentication_rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/authentication_rb_ID"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_authentication_shape"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="15dp"
                    android:text="@string/ID"
                    android:textColor="@drawable/selector_authentication"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/authentication_iv_selectOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-21dp"
                    android:layout_marginTop="-1dp"
                    android:src="@mipmap/mulselect__choosed"
                    android:visibility="invisible" />

                <RadioButton
                    android:id="@+id/authentication_rb_soldier"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_authentication_shape"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="15dp"
                    android:text="@string/soldierCard"
                    android:textColor="@drawable/selector_authentication"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/authentication_iv_selectTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-21dp"
                    android:layout_marginTop="-1dp"
                    android:src="@mipmap/mulselect__choosed"
                    android:visibility="invisible" />

                <RadioButton
                    android:id="@+id/authentication_rb_student"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_authentication_shape"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="15dp"
                    android:text="@string/studentIDCard"
                    android:textColor="@drawable/selector_authentication"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/authentication_iv_selectThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-21dp"
                    android:layout_marginTop="-1dp"
                    android:src="@mipmap/mulselect__choosed"
                    android:visibility="invisible" />

                <RadioButton
                    android:id="@+id/authentication_rb_passport"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_authentication_shape"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="15dp"
                    android:text="@string/passport"
                    android:textColor="@drawable/selector_authentication"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/authentication_iv_selectFour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-21dp"
                    android:layout_marginTop="-1dp"
                    android:src="@mipmap/mulselect__choosed"
                    android:visibility="invisible" />

                <RadioButton
                    android:id="@+id/authentication_rb_business"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_authentication_shape"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="15dp"
                    android:text="@string/businessLicense"
                    android:textColor="@drawable/selector_authentication"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/authentication_iv_selectFive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-21dp"
                    android:layout_marginTop="-1dp"
                    android:src="@mipmap/mulselect__choosed"
                    android:visibility="invisible" />

            </RadioGroup>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shape_song_comment_et"
                android:hint="@string/inputIDNum"
                android:paddingBottom="8dp"
                android:paddingLeft="6dp"
                android:paddingTop="8dp"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/star"
                    android:textColor="@color/colorRed"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="@string/phoneNum"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shape_song_comment_et"
                android:hint="@string/inputPhoneNum"
                android:paddingBottom="8dp"
                android:paddingLeft="6dp"
                android:paddingTop="8dp"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/star"
                    android:textColor="@color/colorRed"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="@string/contactAddress"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shape_song_comment_et"
                android:hint="@string/inputDetailedAddress"
                android:paddingBottom="8dp"
                android:paddingLeft="6dp"
                android:paddingTop="8dp"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="@string/understandBenefits"
                android:textColor="@color/colorDarkGreen"
                android:textSize="15sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
