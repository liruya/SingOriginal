<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorShallowBlack">

    <LinearLayout
        android:id="@+id/line_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/colorHyalineGray">
        <TextView
            android:id="@+id/playlist_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textColor="@color/colorGray"
            android:textSize="12sp"
            android:text="共0首"/>
        <ImageButton
            android:id="@+id/playlist_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorHyaline"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/mylist_all"/>
    </LinearLayout>
    <ListView
        android:id="@+id/playlist_lv_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@id/line_layout"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
