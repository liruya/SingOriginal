<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/recmd_vp_show"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp">

                <Button
                    android:id="@+id/recmd_iv_mscian"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:drawablePadding="5dp"
                    android:drawableTop="@mipmap/music_lib_rec_musican_icon"
                    android:padding="5dp"
                    android:text="@string/musician"
                    android:textColor="@color/colorShallowBlack"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/recmd_iv_daily"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:drawablePadding="5dp"
                    android:drawableTop="@mipmap/music_lib_rec_daily_recomment_icon"
                    android:padding="5dp"
                    android:text="@string/daily_recommend"
                    android:textColor="@color/colorShallowBlack"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/recmd_iv_rank"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:drawablePadding="5dp"
                    android:drawableTop="@mipmap/music_lib_rec_rank_icon"
                    android:padding="5dp"
                    android:text="@string/original_rank"
                    android:textColor="@color/colorShallowBlack"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
