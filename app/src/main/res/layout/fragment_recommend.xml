                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:background="@color/colorWhite"
                    android:drawablePadding="5dp"
                    android:drawableTop="@mipmap/music_lib_rec_musican_icon"
                    android:text="@string/musician"
                    android:textColor="@color/colorShallowBlack"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/recmd_btn_daily"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:background="@color/colorWhite"
                    android:drawablePadding="5dp"
                    android:drawableTop="@mipmap/music_lib_rec_daily_recomment_icon"
                    android:text="@string/daily_recommend"
                    android:textColor="@color/colorShallowBlack"
                    android:textSize="12sp" />

