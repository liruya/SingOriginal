<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Space
        android:id="@+id/lvhdr_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorHyaline" />

    <ViewStub
        android:id="@+id/lvhdr_vs_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/item_songlist_author" />

    <ViewStub
        android:id="@+id/lvhdr_vs_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/item_songlist_desc" />

    <include
        android:id="@+id/lvhdr_inc_play"
        layout="@layout/item_play" />
</LinearLayout>