<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGray"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_song_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_song_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:src="@mipmap/default_image" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/item_song_icon"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/item_song_songName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/songName"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_song_singer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_song_songName"
                android:layout_marginTop="10dp"
                android:text="@string/singer"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/item_song_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/item_song_singer"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/item_song_singer"
                android:text="@string/nickname"
                android:textColor="@color/colorBlack" />

            <ImageView
                android:id="@+id/item_song_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:src="@drawable/selector_song_details_collected" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/item_song_ll"
        android:background="@color/colorWhite">

        <View
            android:id="@+id/item_song_view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorLightGray" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/song_details_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_song_view"
        android:layout_marginBottom="15dp"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/item_song_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/offer_left" />

        <TextView
            android:id="@+id/item_song_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_song_tab"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@+id/item_song_tab"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/comment" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item_song_comment"
            android:layout_below="@+id/item_song_comment"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:text="@string/moreComment" />

    </RelativeLayout>

</LinearLayout>