<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDarkGreen</item>
        <item name="colorPrimaryDark">@color/colorDarkGreen</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyleColorGray" >
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="TextStyleColorShallowBlack" >
        <item name="android:textColor">@color/colorShallowBlack</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
